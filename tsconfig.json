{
    "compilerOptions": {
        "outDir": "build",
        "target": "ESNext",
        "module": "NodeNext",
        "lib": [
            "es7",
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "rootDir": "src",
        "downlevelIteration": true,
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src",
        "typings/*.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}